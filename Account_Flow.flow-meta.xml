<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    
    <!-- =========================
         BASIC FLOW INFO
         ========================= -->
    <apiVersion>59.0</apiVersion>
    <label>Test Agent Flow</label>
    <description>Test flow used for PR review and AgentForce validation</description>
    <interviewLabel>Test Agent Flow {!$Flow.CurrentDateTime}</interviewLabel>
    <processType>AutoLaunchedFlow</processType>
    <status>Active</status>

    <!-- =========================
         START ELEMENT
         ========================= -->
    <start>
        <locationX>50</locationX>
        <locationY>50</locationY>
        <connector>
            <targetReference>Assignment_1</targetReference>
        </connector>
    </start>

    <!-- =========================
         ASSIGNMENT (DUMMY LOGIC)
         ========================= -->
    <assignments>
        <name>Assignment_1</name>
        <label>Set Test Value</label>
        <locationX>200</locationX>
        <locationY>50</locationY>

        <assignmentItems>
            <assignToReference>var_TestMessage</assignToReference>
            <operator>Assign</operator>
            <value>
                <stringValue>Flow executed successfully</stringValue>
            </value>
        </assignmentItems>
    </assignments>

    <!-- =========================
         VARIABLES
         ========================= -->
    <variables>
        <name>var_TestMessage</name>
        <dataType>String</dataType>
        <isCollection>false</isCollection>
        <isInput>false</isInput>
        <isOutput>true</isOutput>
    </variables>

</Flow>
